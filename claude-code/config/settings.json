  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write \"$CLAUDE_FILE_PATH\""
          },
          {
            "type": "command",
            "command": "[ -f bun.lockb ] && grep -q '\"lint\"' package.json 2>/dev/null && bun run lint 2>/dev/null || true"
          }
        ]
      }
    ]
  }
